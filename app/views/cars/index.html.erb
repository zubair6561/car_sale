<%= render "devise/shared/nav" %>
  <h1 >Search For CARS</h1>

  <%= form_tag(root_path, method: :get) do %>
<div class="container-fluid">
  <div class="row navbar justify-content-center ">
      <div class="col-md-4 mb-3  ">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:query, "Car Model") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[carmodel]', options_for_select(Car.pluck(:carmodel).uniq,selected: params[:query]&.[](:carmodel)), prompt: "Search by Car Model") %></h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:city, "City") %></div>
