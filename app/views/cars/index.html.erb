        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:color, "Color :") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[color]', options_for_select(Car.pluck(:color).uniq,selected: params[:query]&.[](:color)), prompt: "Select a Color") %> </h5>
          </div>
        </div>
      </div>
