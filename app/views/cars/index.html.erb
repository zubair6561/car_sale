<%= render "devise/shared/nav" %>
  <h1 >Search For CARS</h1>

  <%= form_tag(root_path, method: :get) do %>
<div class="container-fluid">
  <div class="row navbar justify-content-center ">
      <div class="col-md-4 mb-3  ">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:query, "Car Model") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[car_model]', options_for_select(Car.pluck(:car_model).uniq,selected: params[:query]&.[](:car_model)), prompt: "Search by Car Model") %></h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:city, "City") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[city]', options_for_select(Car.pluck(:city).uniq,selected: params[:query]&.[](:city)), prompt: "Search a City") %></h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:price, "Price Range:") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[price]', options_for_select(Car.pluck(:price).uniq, selected: params[:query]&.[](:price)), prompt: "Select a price range") %> </h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3 ">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"> <%= label_tag(:engine_detail, "Engine Details :") %></div>
          <div class="card-body">
            <h5 class="card-title"> <%= select_tag('query[engine_detail]', options_for_select(Car.pluck(:engine_detail).uniq, selected: params[:query]&.[](:engine_detail)), prompt: "Select a Engine Details") %>  </h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:transmission_type, "Transmission Type :") %></div>
          <div class="card-body">
