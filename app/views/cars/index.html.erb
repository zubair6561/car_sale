          <div class="card-header"> <%= label_tag(:enginedetail, "Engine Details :") %></div>
          <div class="card-body">
            <h5 class="card-title"> <%= select_tag('query[enginedetail]', options_for_select(Car.pluck(:enginedetail).uniq, selected: params[:query]&.[](:enginedetail)), prompt: "Select a Engine Details") %>  </h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
