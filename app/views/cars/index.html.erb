        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:milage, "Milage :") %></div>
          <div class="card-body">
            <h5 class="card-title"><%= select_tag('query[milage]', options_for_select(Car.pluck(:milage).uniq, selected: params[:query]&.[](:milage)), prompt: "Select a Milage") %>  </h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card text-white bg-dark mb-40">
          <div class="card-header"><%= label_tag(:enginecapacity, "Engine Capacity :") %></div>
