          <div class="card-header">    <%= label_tag(:assemblytype, "Assembly Type :") %></div>
          <div class="card-body">
            <h5 class="card-title">    <%= select_tag('query[assemblytype]', options_for_select(Car.pluck(:assemblytype).uniq,selected: params[:query]&.[](:assemblytype)), prompt: "Select a Assembly Type") %> </h5>
          </div>
        </div>
      </div>
      <div class="col-md-6 offset-md-6 d-flex justify-content-end align-items-end">
        <button class="btn btn-primary btn-3d my-2 my-sm-0" type="submit">Search</button>
      </div>
    </div>
  </div>
</div>

<% end %>
<%= render "cars/cars" %>
