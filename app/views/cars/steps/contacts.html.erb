<%= render "devise/shared/nav" %>
<div class="progress ">
  <div class="progress-bar progressbar3" role="progressbar"></div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
    <h3 class="mt-4">Contact Details</h3>
      <%= simple_form_for @car, method: :put, url: wizard_path do |f| %>
        <div class="form-group">
          <%= f.label :primary_contact, 'Primary Contact Number'%>
          <%= f.text_field :primary_contact, class: "form-control", placeholder: '+92-xxx-xxxxxxx' %>
        </div>
        <div class="form-group">
          <%= f.label :secondary_contact, 'Secondary Contact Number' %>
          <%= f.text_field :secondary_contact, class: "form-control", placeholder: '+92-xxx-xxxxxxx' %>
        </div>
        <div class="text-center mt-4">
          <%= f.button :button, "Previous", type: "button", onclick: "window.location.href='#{previous_wizard_path}'", class: 'btn btn-secondary mr-2' %>
          <%= f.submit 'Post Ad', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>




