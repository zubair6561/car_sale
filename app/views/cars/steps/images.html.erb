<%= render "devise/shared/nav" %>
<div class="progress ">
  <div class="progress-bar progressbar2" role="progressbar"></div>
</div>
<%= simple_form_for @car, method: :put, url: wizard_path, html: { multipart: true } do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <!-- Step 2: Image Upload -->
      <div class="col-md-8">
        <h2 class="text-center">Images</h2>
        <% if @car.images.attached? %>
          <div class="existing-images">
            <% @car.images.each do |image| %>
              <%= image_tag url_for(image), class: "img-thumbnail border-primary", width: 100, height: 100, multiple: true %>
            <% end %>
          </div>
        <% end %>
        <h3>Add New Images:</h3>
        <%= f.file_field :images, multiple: true, required: true, class: "form-control-file border-secondary" %>
        <div class="text-center">
          <%= f.submit 'Next Step', class: 'btn btn-primary mt-3 border-dark' %>
          <%= f.button :button, "skip", type: "button", onclick: "window.location.href='#{next_wizard_path}'", class: 'btn btn-dark mt-3 border-dark' %>
          <%= f.button :button, "Previous", type: "button", onclick: "window.location.href='#{previous_wizard_path}'", class: 'btn btn-secondary mt-3 border-dark' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
